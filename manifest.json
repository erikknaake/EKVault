{
  "manifest_version": 2,
  "name": "EKVault",
  "short_name": "EKVault",
  "version": "0.0.3",
  "description": "EKVault, a completly offline password manager.",
  "author": "Erik Knaake",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "assets/fonts/*"
  ],
  "icons": {
    "128": "assets/images/lock-icon-128.png",
    "512": "assets/images/lock-icon-512.png"
  }
}
